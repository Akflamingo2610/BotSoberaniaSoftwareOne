{
  "hosting": {
    "public": "build/web",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [{"source": "**", "destination": "/index.html"}],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate"}
        ]
      },
      {
        "source": "**/*.js",
        "headers": [
          {"key": "Cache-Control", "value": "no-cache, max-age=0"}
        ]
      },
      {
        "source": "**/*.css",
        "headers": [
          {"key": "Cache-Control", "value": "no-cache, max-age=0"}
        ]
      }
    ]
  }
}
